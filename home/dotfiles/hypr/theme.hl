# Tokyo Night Storm Theme (theme.hl)
$bg = rgb(24283b)
$fg = rgb(c0caf5)
$accent = rgb(7aa2f7)
$magenta = rgb(bb9af7)

# This is the "hyprtoolkit" style block
theme {
    # Main window colors
    color.background = $bg
    color.text = $fg
    color.accent = $accent
    
    # Selection/Highlight colors
    color.selection_background = $magenta
    color.selection_text = $bg
    
    # Border/Shadow
    border_color = $accent
    shadow_color = rgba(00000055)
}
